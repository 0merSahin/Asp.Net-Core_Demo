@model IEnumerable<EntityLayer.Concrete.Comment>

@{
    ViewData["Title"] = "CommentListByBlog";
}

<div class="comment-top">

    @if (Model.Count() <= 0)
    {
        <h5>Henüz yorum yapılmamış.</h5>
        <h5>İlk yorumu siz yapın</h5>
        <br />
    }
    else
    {
        <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {

            <div class="media">
                <img src="~/CoreBlogWeb/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }
</div>

